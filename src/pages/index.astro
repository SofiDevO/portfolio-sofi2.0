---
import BackgroundGradient from "@src/layouts/BackgroundGradient/BackgroundGradient.astro";
import Layout from "../layouts/Layout.astro";
import Hero from "@src/components/organisms/Hero/Hero.astro";
import DividerBottom from "@src/components/atoms/DividerBottom/DividerBottom.astro";
import About from "@src/components/organisms/About/About.astro";
import DividerTop from "@src/components/atoms/DividerTop/DividerTop.astro";
import Skills from "@src/components/organisms/Skills/Skills.astro";
import Portfolio from "@src/components/organisms/Portfolio/Portfolio.astro";
import Social from "@src/components/organisms/Social/Social.astro";
import Footer from "@molecules/Footer/Footer.astro";
import ToastNotification from "@src/components/atoms/ToastNotification/ToastNotification.astro";
import { getData } from "@src/services/data";
const { user, skills, tools } = await getData();

export const prerender = true;
---

<Layout>
  <BackgroundGradient>
    <Hero data={user} />
  </BackgroundGradient>
  <DividerTop />
  <About data={user} />
  <DividerBottom fill="shape-fill-3" />
  <Skills data={user} , skills={skills} tools={tools} />
  <DividerTop fill="shape-fill-purple " />
  <!-- <Portfolio /> -->
  <Portfolio cardsLength={3} server:defer />
  <DividerBottom fill="shape-fill-3" />
  <Social />
  <Footer />
</Layout>
<ToastNotification />
<script>
  import ToastNotification from "@src/controllers/toastAlerts.controller";
  document.addEventListener("DOMContentLoaded", () => {
    setTimeout(() => {
