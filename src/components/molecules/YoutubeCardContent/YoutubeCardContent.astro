---
import Subtitle from "@src/components/atoms/Subtitle/Subtitle.astro";
import Button from "@atoms/Button/Button.astro";
import SocialCardImage from "@src/components/atoms/SocialCardImage/SocialCardImage.astro";

---

<div class="card-social__container">
<Subtitle content="My Latest Youtube video" />
<p class="card-social__content">I love sharing the knowledge I've gained over the years on my YouTube channel. Check out my latest video and join me on this learning journey!</p>

<div class="youtubeThumbnail"></div>
<Button type="button" content="Watch" extraClass="youtube__button"/>
<SocialCardImage image="/img/icons/youtube.svg" altDesc="Youtube logo" />
</div>
<style lang="scss" is:inline
>
  .youtubeThumbnail {
    background-size: cover;
    width: 100%;
    height: 116%;
    position: absolute;
    z-index: -1;
    top: -17%;
    left: 0;
    mix-blend-mode: multiply;
    filter: opacity(0.5) blur(4px);
    overflow: hidden;
  }

.youtube__button{
  max-width: 10rem;
}

  .youtube__card:hover  .youtube__button__play{
    filter: opacity(1);
  }


</style>
