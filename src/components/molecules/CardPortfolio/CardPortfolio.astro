---
const {
  title,
  imgSrc,
  demoURL,
  repoURL,
  description,
  skills,
  skillIcon,
  detalles,
  slug
} = Astro.props;
---

<article class="card">
  <div class="card__cara--A">
    <img class="card__img" alt={`Imagen de portada de ${title}`} src={imgSrc} />
  </div>
  <div class="card__cara--B">
    <div class="thecnology">
      {
        skillIcon.map((icon, index) => (
          <div class="skill-item">
            <iconify-icon icon={icon} width="20" height="20" />
            <span class="skill__tooltip">{skills[index]}</span>
          </div>
        ))
      }
    </div>
    <h3 class="card__title">{title}</h3>
    <p class="card__description">{description}</p>
    <div class="card__links">
      <button data-slug={slug} class="card__btn" >Details</button>
    </div>
  </div>
</article>
